<div class="page-container">

  <article class="screen screen-lg yellow">

    <%= translate("Create User", "translate-lg translate-center") %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="form-category">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="form-category">

        <div class="form-field">
          <p class="form-label">Email ::</p>
          <%= f.email_field :email, class: "form-input text" %>
        </div>

        <div class="form-field">
          <p class="form-label">Username ::</p>
          <%= f.text_field :username, autofocus: true, class: "form-input text"%>
        </div>

        <div class="form-field">
          <p class="form-label">Credits ::</p>
          <%= f.text_field :credits, class: "form-input integer" %>
        </div>

        <div class="form-field">
          <p class="form-label">New Password ::</p>
          <%= f.password_field :password, class: "form-input text" %>
        </div>

        <div class="form-field">
          <p class="form-label">Confirm Password ::</p>
          <%= f.password_field :password_confirmation, class: "form-input text" %>
        </div>

      </div>

      <div class="form-category">
        <%= f.submit "Submit", class: "button form-button" %>
      </div>
    <% end %>

  </article>

</div>