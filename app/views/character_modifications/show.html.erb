<section>

    <%= section_header("Attachment Basics") %>

    <% if @mod.restricted %>
        <p class="sw text danger">Restricted</p>
    <% end %>

    <div class="basics">

        <div class="dataset">
            <p class='data-title'>Name</p>
            <p class='data'><%= @mod.name %></p>
        </div>

        <div class="dataset">
            <p class='data-title'>Attachment For</p>
            <p class='data'><%= @mod.attachment_type %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Rarity</p>
            <p class="integer data"><%= @mod.rarity %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Cost</p>
            <p class="integer data">$ <%= @mod.cost %></p>
        </div>

    </div>

</section>

<section>

    <%= section_header("Attachment Details") %>

    <div class="attr">

        <div class="dataset">
            <p class="data-title">Encumbrance</p>
            <p class="integer data"><%= @mod.encumbrance %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Required Hard Points</p>
            <p class="integer data"><%= @mod.hp_required %></p>
        </div>

    </div>

</section>

<section>

    <%= section_header("Base Modifiers") %>

    <div class="description">
        <div class="dataset">
            <p class="data"><%= parse_base_modifiers(@mod) %></p>
        </div>
    </div>

</section>

<section>

    <%= section_header("Mod Options") %>

    <div class="description">
        <div class="dataset">
            <p class="data"><%= parse_mod_options(@mod) %></p>
        </div>
    </div>

</section>

<section>

    <%= section_header("Brand") %>

    <div class="description">
        <div class="dataset">
            <p class="data"><%= @char_mod.brand %></p>
        </div>
    </div>

</section>