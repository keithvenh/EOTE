<div class="page-container">

    <article class="screen screen-lg green">

    <%= translate("Update Gear for #{@char.name}", "translate-lg translate-center") %>

        <%= form_for [@char, @char_equipment] do |f| %>

            <div class="form-category">

                <%= f.hidden_field :character_id, value: @char.id %>

                <%= f.hidden_field :armor_id, value: @equipment.id %>

                <div class="form-field">
                    <p class="form-label">Armor ::</p>
                    <p class="form-input"><%= @equipment.name %></p>
                </div>

                <% if @equipment.brands %>
                    <div class="form-field">
                        <p class="form-label">Brand ::</p>
                        <%= f.select(:brand, get_brands(@equipment), {prompt: ''}, {class: "form-input select"}) %>
                    </div>
                <% end %>

                <div class="form-field">
                    <p class="form-label">Quantity ::</p>
                    <%= f.text_field :quantity, class: "form-input integer" %>
                </div>

            </div>
            
            <div class="form-category">
                <%= f.submit "Submit", class: "button form-button" %>
            </div>

        <% end %>

    </article>

</div>