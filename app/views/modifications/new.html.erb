<section class="form-section">

    <%= section_header("New Attachment") %>

    <%= form_for @mod do |f| %>

        <div class="form-category">
            
            <div class="form-field">
                <%= f.text_field :name, class: "form-input text", autofocus: true %>
                <p class="form-label">Name</p>
            </div>

            <div class="form-field">
                <div class="checkbox">
                <%= f.check_box :restricted,  class: "boolean"%>
                <p class="form-label">Restricted</p>
                </div>
            </div>

            <div class="form-field">
                <%= f.select(:attachment_type, ['Armor', 'Weapon'], {prompt: ''}, {class: "form-input select"}) %>
                <p class="form-label">Type</p>
            </div>

            <div class="form-field">
                <%= f.text_field :encumbrance, class: "form-input integer" %>
                <p class="form-label">Encumbrance</p>
            </div>

            <div class="form-field">
                <%= f.text_field :hp_required, class: "form-input integer" %>
                <p class="form-label">Required Hard Points</p>
            </div>

            <div class="form-field">
                <%= f.text_field :cost, class: "form-input integer" %>
                <p class="form-label">Cost</p>
            </div>

            <div class="form-field">
                <%= f.text_field :rarity, class: "form-input integer" %>
                <p class="form-label">Rarity</p>
            </div>

            <div class="form-field form-field-long">
                <%= f.text_area :base_modifiers, class: "form-input long-text" %>
                <p class="form-label">Base Modifiers</p>
            </div>

            <div class="form-field form-field-long">
                <%= f.text_area :mod_options, class: "form-input long-text" %>
                <p class="form-label">Modification Options</p>
            </div>

            <div class="form-field form-field-long">
                <%= f.text_area :brands, class: "form-input long-text" %>
                <p class="form-label">Models</p>
            </div>

            <div class="form-field">
                <%= f.text_field :sourcebook, class: "form-input text" %>
                <p class="form-label">Sourcebook</p>
            </div>

        </div>

        <div class="form-category">
            <%= f.submit "Submit", class: "button form-button success" %>
        </div>

    <% end %>

</section>
