<section>
    
    <%= section_header("Menu") %>
    
    <div class="wrapper index-menu">

        <ul class="menu">

            <li class="link"><%= link_to "Home", root_path %></li>

            <li class="link"><%= link_to "Vehicles", vehicle_path %></li>

            <li class="link"><%= link_to "Update Vehicle", edit_vehicle_path(@vehicle) %></li>

        </ul>

        <div class="sidebar">

            <% num = rand(6) %>
            <%= image_tag("results/#{num}.png") %>

        </div>
    
    </div>
    

</section>

<section>

    <%= section_header("Basics") %>

    <% if @ship.restricted %>
        <p class="sw text danger">Restricted</p>
    <% end %>

    <div class="basics">

        <% if @ship.name && @ship.name != '' && @ship.name != @ship.model %>
            <div class="dataset">
                <p class='data-title'>Name</p>
                <p class='data'><%= @ship.name %></p>
            </div>
        <% end %>
        
        <div class="dataset">
            <p class="data-title">Model</p>
            <p class='data'><%= @ship.model %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Hull Type</p>
            <p class="integer data"><%= @ship.hull_type %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Manufacturer</p>
            <p class="data"><%= @ship.manufacturer %></p>
        </div>

    </div>

    <div class="basics">
        
        <div class="dataset">
            <p class="data-title">Cost</p>
            <p class='data'><%= @ship.cost %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Rarity</p>
            <p class="integer data"><%= @ship.rarity %></p>
        </div>

    </div>

</section>

<section>

    <%= section_header("Hardware") %>

    <div class="attr">

        <div class="dataset">
            <p class='data-title'>Hyperdrive</p>
            <p class='data-subtitle'>Primary / Backup</p>
            <p class='data integer'><%= @ship.primary_hyperdrive %> / <%= @ship.secondary_hyperdrive %></p>
        </div>
        
        <div class="dataset">
            <p class="data-title">Navicomputer</p>
            <p class='data'><%= @ship.navicomputer %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Sensor Range</p>
            <p class="integer data"><%= @ship.sensor_range %></p>
        </div>

    </div>

</section>

<section>

    <%= section_header("Capacities") %>

    <div class="attr">

        <div class="dataset">
            <p class='data-title'>Complement</p>
            <p class='data integer'><%= parse_complement(@ship) %></p>
        </div>
        
        <div class="dataset">
            <p class="data-title">Passengers</p>
            <p class='integer data'><%= @ship.passengers %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Encumbrance Capacity</p>
            <p class="integer data"><%= @ship.capacity %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Hard Points</p>
            <p class="integer data"><%= @ship.hard_points %></p>
        </div>

    </div>

</section>


<section>

    <%= section_header("Flight Details") %>

    <div class="attr">

        <div class="dataset">
            <p class='data-title'>Silhouette</p>
            <p class='data integer'><%= @ship.silhouette %></p>
        </div>
        
        <div class="dataset">
            <p class="data-title">Speed</p>
            <p class='integer data'><%= @ship.speed %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Handling</p>
            <p class="integer data"><%= @ship.handling %></p>
        </div>

    </div>

</section>

<section>

    <%= section_header("Defensive Capabilities") %>

    <div class="attr">

        <div class="dataset">
            <p class='data-title'>Armor</p>
            <p class='data integer'><%= @ship.armor %></p>
        </div>
        
        <div class="dataset">
            <p class="data-title">Hull Trauma</p>
            <p class='integer data'><%= @ship.hull_trauma_threshold %></p>
        </div>

        <div class="dataset">
            <p class="data-title">System Strain</p>
            <p class="integer data"><%= @ship.system_strain_threshold %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Defense</p>
            <p class="data-subtitle">Fore / Port / Starboard / Aft
            <p class="integer data"><%= @ship.defense_fore %> / <%= @ship.defense_port %> / <%= @ship.defense_starboard %> / <%= @ship.defense_aft %></p>
        </div>

    </div>

</section>