<section>
    
    <%= section_header("Menu") %>
    
    <div class="wrapper index-menu">

        <ul class="menu">

            <li class="link"><%= link_to "Home", root_path %></li>

            <li class="link"><%= link_to "Update Contact", edit_contact_path(@contact) %></li>

        </ul>

        <div class="sidebar">

            <% num = rand(6) %>
            <%= image_tag("results/#{num}.png") %>

        </div>
    
    </div>
    

</section>

<section>

    <%= section_header("Profile") %>

    <div class="basics">

        <div class="dataset">
            <p class='data-title'>Name</p>
            <p class='data'><%= @contact.character.name %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Race</p>
            <p class="data"><%= @contact.character.race ? @contact.character.race : "Unknown" %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Planet</p>
            <p class="data"><%= @contact.planet.name %></p>
        </div>

        <div class="dataset">
            <p class="data-title">Warmth</p>
            <p class="integer data"><%= @contact.warmth %></p>
        </div>

    </div>

</section>

<section>

    <%= section_header("Details") %>


    <div class="description">
        
        <div class="dataset">
            <p class="data-title">Last Known Location</p>
            <p><%= @contact.last_known_location %></p>
        </div>
        
    </div>

</section>