<div class="page-container">
<div class="screen screen-left-lg">
    <%= link_to edit_character_path(@char) do %>
        <%= translate("Edit Character", "") %>
    <% end %>
    <%= link_to @char, method: :delete, data: { confirm: 'Are you sure you wish to delete this character?' } do %>
        <%= translate("Destroy Character", "") %>
    <% end %>
    <%= translate("Data", "translate-center") %>
</div>
<div class="screen screen-lg">
    <header class="character-header">
        <%= translate(@char.name, "translate-left") %>
        <%= translate(@char.race, "translate-left") %>
        <%= translate(@char.career, "translate-left") %>
    </header>

    <article class="character-details">
        <section class="character-general">
            <div class="general-data">
                <%= translate("Soak", "data-type translate-center translate-sm") %>
                <p class="sw data"><%= @char.soak %></p>
            </div>
            <div class="general-data">
                <%= translate("Wound Threshold", "data-type translate-center translate-sm") %>
                <p class="sw data"><%= @char.wound_threshold %></p>
            </div>
            <div class="general-data">
                <%= translate("Strain Threshold", "data-type translate-center translate-sm") %>
                <p class="sw data"><%= @char.strain_threshold %></p>
            </div>
            <div class="general-data">
                <%= translate("Ranged Defense", "data-type translate-center translate-sm") %>
                <p class="sw data"><%= @char.defense_ranged %></p>
            </div>
            <div class="general-data">
                <%= translate("Melee Defense", "data-type translate-center translate-sm") %>
                <p class="sw data"><%= @char.defense_melee %></p>
            </div>
        </section>

        <section class="character-attributes">
            <div class="general-data">
                <%= translate("Brawn", "translate-center translate-sm brawn") %>
                <p class="sw data brawn"><%= @char.brawn %></p>
            </div>
            <div class="general-data">
                <%= translate("Agility", "translate-center translate-sm agility") %>
                <p class="sw data agility"><%= @char.agility %></p>
            </div>
            <div class="general-data">
                <%= translate("Intellect", "translate-center translate-sm intellect") %>
                <p class="sw data intellect"><%= @char.intellect %></p>
            </div>
            <div class="general-data">
                <%= translate("Cunning", "translate-center translate-sm cunning") %>
                <p class="sw data cunning"><%= @char.cunning %></p>
            </div>
            <div class="general-data">
                <%= translate("Willpower", "translate-center translate-sm willpower") %>
                <p class="sw data willpower"><%= @char.willpower %></p>
            </div>
            <div class="general-data">
                <%= translate("Presence", "translate-center translate-sm presence") %>
                <p class="sw data presence"><%= @char.presence %></p>
            </div>
        </section>

        <section class="character-skills">
            <div class="category general">
                <%= translate("General", "translate-left") %>
                <% @char.skills.each do |skill| %>
                    <% if skill.category == "General" %>
                        <div class="skill">
                            <p class="<%= skill.attr.downcase %>"><%= skill.career ? '<span class="sw">(</span>'.html_safe : '' %> <%= skill.name %></p>
                            <div class="level-display">
                                <% skill.level.times do %>
                                    <div class="level level-true <%= skill.attr.downcase %>"></div>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div class="other">
                <div class="category combat">
                    <%= translate("Combat", "translate-left") %>
                    <% @char.skills.each do |skill| %>
                        <% if skill.category == "Combat" %>
                            <div class="skill">
                                <p class="<%= skill.attr.downcase %>"><%= skill.career ? '<span class="sw">(</span>'.html_safe : '' %> <%= skill.name %></p>
                                <div class="level-display">
                                    <% skill.level.times do %>
                                        <div class="level level-true <%= skill.attr.downcase %>"></div>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                </div>
                <div class="category knowledge">
                    <%= translate("Knowledge", "translate-left") %>
                    <% @char.skills.each do |skill| %>
                        <% if skill.category == "Knowledge" %>
                            <div class="skill">
                                <p class="<%= skill.attr.downcase %>"><%= skill.career ? '<span class="sw">(</span>'.html_safe : '' %> <%= skill.name %></p>
                                <div class="level-display">
                                    <% skill.level.times do %>
                                        <div class="level level-true <%= skill.attr.downcase %>"></div>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                </div>
            </div>

    </article>
</div>
</div>
