<div class="page-contatiner">

    <section class="screen screen-md red">

        <%= translate("Weapons", "translate-center") %>

        <% @weapons.each do |weapon| %>
            <p><%= link_to "#{weapon.brand} #{weapon.weapon.name}", character_character_weapon_path(character_id: @character.id, id: weapon.id) %></p>
        <% end %>

    </section>

    <section class="screen screen-md blue">

        <%= translate("Armor", "translate-center") %>

        <% @armor.each do |armor| %>
            <p><%= link_to "#{armor.brand} #{armor.armor.name}", character_character_armor_path(character_id: @character.id, id: armor.id) %></p>
        <% end %>

    </section>

</div>